<h2>Active Domains</h2>
<p><%= link_to "Add New Domain Record", new_hosting_path %></p>
<div id="hosting_list">
		<div id="hosting_list_header">
			<div class="hosting_header_item">Domain Name</div>
			<div class="hosting_header_item">Contact Name</div>
			<div class="hosting_header_item">$customer_company</div>
		</div>	
	<% @hostings.all.each do |hosting| %>
		<div class="hostings_list_item">
			<div class="hosting_list_item"><%= link_to hosting.domain_name, hosting %></div>
			<div class="hosting_list_item"><%= hosting.contact_name %></div>
			<div class="hosting_list_item">$customer_company</div>
		</div>
	<% end %>
</div>
