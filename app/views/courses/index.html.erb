<h2>Intro</h2>
<% @courses.intro.each do |course| %>
	<p class="courses_list">
		<% if course.status.blank? %>
			<span class="draft">DRAFT</span>
		<% else %>
			<span class="not_draft">LIVE</span>
		<% end %>
		<%= link_to course.title, course, :class => :title %>&nbsp;
		<span class="edit_course"><%= link_to 'Edit', edit_course_path(course) %></span>
	</p>
<% end %>

