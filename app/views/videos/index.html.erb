<div id="video_list">
	<div class="new_video_list_item">
		<p><%= link_to "+ Add a new video", new_video_path, :class => :new_video_plus %></p>
		<p></p>
	</div>
	<% @videos.each do |video| %>
		<div class="video_list_item">
			<p><img src="<%= video.thumbnail.to_s %>">
			<p><%= link_to "##{video.id} - #{video.title}", video_path(video) %></p>
			<p class=""><%= video.details %></p>
			<span class="video_updated">Updated: <%= video.updated_at.strftime("%B %y") %></span>
		</div>
	<% end %>


</div>